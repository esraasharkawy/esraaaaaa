@model Advancedproject.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Masterpage.cshtml";
}

<h2>Edit</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Eid" />
            <div class="form-group">
                <label asp-for="E_salary" class="control-label"></label>
                <input asp-for="E_salary" class="form-control" />
                <span asp-validation-for="E_salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_phone" class="control-label"></label>
                <input asp-for="E_phone" class="form-control" />
                <span asp-validation-for="E_phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_gender" class="control-label"></label>
                <input asp-for="E_gender" class="form-control" />
                <span asp-validation-for="E_gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="D_id" class="control-label"></label>
                <select asp-for="D_id" class="form-control" asp-items="ViewBag.D_id"></select>
                <span asp-validation-for="D_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


