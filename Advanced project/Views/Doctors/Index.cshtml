@model IEnumerable<Advancedproject.Models.Doctor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Masterpage.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.D_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept_no)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.D_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_no)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Did">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Did">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Did">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
