@model IEnumerable<Advancedproject.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Masterpage.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dept_floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Deptno">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Deptno">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Deptno">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
